<h4>Tareas Realizadas</h4>
<% if @list.empty? %>
	<p>No has adicionado tareas aÃºn</p>
<% else %>
	<ul>
		<% @list.each do |item| %>
			<li>
				<% if item["done"] %>
					<p><%= item["title"] %></p>		
					<form action="/delete" method="post">
